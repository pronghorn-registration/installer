# Pronghorn Environment Configuration
# Generated values will be set by the installer. Configure remaining values after setup.

APP_NAME=Pronghorn
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=America/Edmonton
APP_URL=https://pronghorn.example.com

# Instance identifier - set during setup
INSTANCE_ID=default

# Database
DB_CONNECTION=sqlite

# Redis (Docker service name)
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PORT=6379

# Cache, Queue, Session (use Redis in production)
CACHE_STORE=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# ILS Configuration - configure after setup
ILS_DRIVER=symphony
ILS_API_BASE_URL=
ILS_API_USERNAME=
ILS_API_PASSWORD=

# Mail - configure after setup
MAIL_MAILER=log
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"

# SAML - configure after setup
SAML_BASE_URL="${APP_URL}"
